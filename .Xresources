! Font ----------------------------------------------

Xft.dpi:           96
Xft.antialias:     true
Xft.rgba:          rgb
Xft.autohint:      true
Xft.lcdfilter:     lcddefault
Xft.hinting:       true
Xft.hintstyle:     hintfull
URxvt.letterSpace: 0

!#define FONT NotoSansMono Nerd Font
!#define FONT Inconsolata Nerd Font Mono
!#define FONT JetBrainsMono Nerd Font Mono
!#define FONT DroidSansMono Nerd Font Mono
#define FONT RobotoMono Nerd Font
!#define FONT SauceCodePro Nerd Font
#define ICON Font Awesome 5 Free Solid
#define EMOJI Noto Color Emoji
#define NERD_FONT BitstreamVeraSansMono Nerd Font Mono
!#define NERD_FONT LiterationMono Nerd Font Mono
!#define NERD_FONT DejaVuSansMono Nerd Font Mono
!#define NERD_FONT JetBrainsMono Nerd Font
#define FONT_SIZE 12
#define ICON_SIZE 16
#define EMOJI_SIZE 16
#define NERD_SIZE 16

URxvt.font: xft:FONT:style=Book:size=FONT_SIZE:antialias=true:hinting=true, xft:ICON:style=Regular:size=ICON_SIZE:antialias=true:hinting=true, xft:NERD_FONT:style=Roman:size=NERD_SIZE:antialias=true:hinting=true, xft:EMOJI:style=Regular:size=EMOJI_SIZE:antialias=true:hinting=true
URxvt.boldFont: xft:FONT:style=Bold:size=FONT_SIZE:antialias=true:hinting=true, xft:ICON:style=Regular:size=ICON_SIZE:antialias=true:hinting=true, xft:NERD_FONT:style=Roman:size=NERD_SIZE:antialias=true:hinting=true, xft:EMOJI:style=Regular:size=EMOJI_SIZE:antialias=true:hinting=true
URxvt.italicFont: xft:FONT:style=Italic:size=FONT_SIZE:antialias=true:hinting=true, xft:ICON:style=Regular:size=ICON_SIZE:antialias=true:hinting=true, xft:NERD_FONT:style=Roman:size=NERD_SIZE:antialias=true:hinting=true, xft:EMOJI:style=Regular:size=EMOJI_SIZE:antialias=true:hinting=true
URxvt.boldItalicFont: xft:FONT:style=Bold Italic:size=FONT_SIZE:antialias=true:hinting=true, xft:ICON:style=Regular:size=ICON_SIZE:antialias=true:hinting=true, xft:NERD_FONT:style=Roman:size=NERD_SIZE:antialias=true:hinting=true, xft:EMOJI:style=Regular:size=EMOJI_SIZE:antialias=true:hinting=true

