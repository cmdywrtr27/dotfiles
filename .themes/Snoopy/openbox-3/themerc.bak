# Menu
menu.border.width: 10
menu.overlap.x: -20
menu.overlap.y: -20

menu.border.color: #353944

menu.title.bg: raised solid
menu.title.bg.color: #353944
menu.title.text.color: #ffffff
menu.title.text.justify: center

menu.items.bg: flat solid
menu.items.bg.color: #353944

menu.items.text.color: #ffffff
menu.items.disabled.text.color: #777777

menu.items.active.bg: flat gradient horizontal
menu.items.active.bg.color: #353944
menu.items.active.bg.colorTo: #61AFEF
menu.items.active.text.color: #ffffff

