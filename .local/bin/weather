#!/bin/bash

# Open Weather Map API code, register to http://openweathermap.org to get one ;)
API_KEY=""

# Check on http://openweathermap.org/find
CITY_ID=""

ICON_SUNNY="Clear  "
ICON_CLOUDY="Cloudy  "
ICON_RAINY="Rainy  "
ICON_STORM="Storm  "
ICON_SNOW="Snow  "
ICON_FOG="Fog  "
ICON_MISC=" "

TEXT_SUNNY="Sunny"
TEXT_CLOUDY="Cloudy"
TEXT_RAINY="Rainy"
TEXT_STORM="Storm"
TEXT_SNOW="Snow"
TEXT_FOG="Fog"

SYMBOL_CELSIUS="˚C"
#SYMBOL_FAHRENHEIT="℉ "
SYMBOL_FAHRENHEIT="°F"

WEATHER_URL="http://api.openweathermap.org/data/2.5/weather?id=${CITY_ID}&appid=${API_KEY}&units=imperial"

WEATHER_INFO=$(wget -qO- "${WEATHER_URL}")
WEATHER_MAIN=$(echo "${WEATHER_INFO}" | grep -o -e '\"main\":\"[A-Za-z]*\"' | awk -F ':' '{print $2}' | tr -d '"')
WEATHER_TEMP=$(echo "${WEATHER_INFO}" | grep -o -e '\"temp\":\-\?[0-9]*' | awk -F ':' '{print $2}' | tr -d '"')

if [[ "${WEATHER_MAIN}" = *Snow* ]]; then
	if  [[ $1 = "-i" ]]; then
    echo "${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}, ${ICON_SNOW}"
	else
    echo "${TEXT_SNOW} ${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}"
	fi
elif [[ "${WEATHER_MAIN}" = *Rain* ]] || [[ "${WEATHER_MAIN}" = *Drizzle* ]]; then
	if  [[ $1 = "-i" ]]; then
    echo "${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}, ${ICON_RAINY}"
	else
    echo "${TEXT_RAINY} ${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}"
	fi
elif [[ "${WEATHER_MAIN}" = *Cloud* ]]; then
	if  [[ $1 = "-i" ]]; then
    echo "${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}, ${ICON_CLOUDY}"
	else
    echo "${TEXT_CLOUDY} ${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}"
	fi
elif [[ "${WEATHER_MAIN}" = *Clear* ]]; then
	if  [[ $1 = "-i" ]]; then
    echo "${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}, ${ICON_SUNNY}"
	else
    echo "${TEXT_SUNNY} ${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}"
	fi
elif [[ "${WEATHER_MAIN}" = *Fog* ]] || [[ "${WEATHER_MAIN}" = *Mist* ]]; then
	if  [[ $1 = "-i" ]]; then
    echo "${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}, ${ICON_FOG}"
	else
    echo "${TEXT_FOG} ${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}"
	fi
else
	if  [[ $1 = "-i" ]]; then
    echo "${WEATHER_MAIN} ${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}, ${ICON_MISC}"
    #echo "${ICON_MISC} ${WEATHER_MAIN} ${WEATHER_TEMP}"
	else
    echo "${WEATHER_MAIN} ${WEATHER_TEMP}${SYMBOL_FAHRENHEIT}"
    #echo "${WEATHER_MAIN} ${WEATHER_TEMP}"
	fi
fi
