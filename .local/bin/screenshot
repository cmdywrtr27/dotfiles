#!/bin/bash

scrot -m -d 3 -q 100 'Screenshot_%m-%d-%Y_%H:%M:%S.png' -e 'mv $f /home/josh/Pictures/Screenshots' && notify-send -i ~/.icons/Custom/scrot.svg 'Screenshot sent to ~/Pictures/Screenshots'

# Flags
# a - autoselect
# c - count
# d - delay
# q - quality
# m - multi-display
# s - select
# f - freeze (with -s)
# u - focused screen
# k - stack (join windows together)
