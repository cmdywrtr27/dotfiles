# This tmux statusbar config was created by tmuxline.vim
# on Thu, 21 Apr 2022

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#2e3440,bg=#838f8f"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#5fafff"
set -g status-style "none,bg=#2e3440"
set -g message-style "fg=#2e3440,bg=#838f8f"
set -g pane-border-style "fg=#838f8f"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none,fg=#5fafff,bg=#2e3440"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#d4d4d4,bg=#2e3440"
set -g status-left "#[fg=#2e3440,bg=#5fafff] #(whoami)@#H #[fg=#5fafff,bg=#838f8f,nobold,nounderscore,noitalics]▓▒░#[fg=#2e3440,bg=#838f8f] #S #[fg=#838f8f,bg=#2e3440,nobold,nounderscore,noitalics]▓▒░"
set -g status-right "#[fg=#838f8f,bg=#2e3440,nobold,nounderscore,noitalics]░▒▓#[fg=#2e3440,bg=#838f8f] %A #[fg=#5fafff,bg=#838f8f,nobold,nounderscore,noitalics]░▒▓#[fg=#2e3440,bg=#5fafff] %B %d "
setw -g window-status-format "#[fg=#2e3440,bg=#2e3440,nobold,nounderscore,noitalics]▓▒░#[default] #I #W #[fg=#2e3440,bg=#2e3440,nobold,nounderscore,noitalics]▓▒░"
setw -g window-status-current-format "#[fg=#2e3440,bg=#838f8f,nobold,nounderscore,noitalics]▓▒░#[fg=#2e3440,bg=#838f8f] #I #W #F #[fg=#838f8f,bg=#2e3440,nobold,nounderscore,noitalics]▓▒░"
