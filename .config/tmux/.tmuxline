# This tmux statusbar config was created by tmuxline.vim
# on Thu, 28 Apr 2022

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#ffffff,bg=#60656e"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#2196f3"
set -g status-style "none,bg=#2e3440"
set -g message-style "fg=#2e3440,bg=#60656e"
set -g pane-border-style "fg=#60656e"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none,fg=#2196f3,bg=#2e3440"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#ffffff,bg=#2e3440"
set -g status-left "#[fg=#ffffff,bg=#2196f3] #(whoami)@#H #[fg=#2196f3,bg=#60656e,nobold,nounderscore,noitalics]#[fg=#ffffff,bg=#60656e] #S #[fg=#60656e,bg=#2e3440,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#60656e,bg=#2e3440,nobold,nounderscore,noitalics]#[fg=#ffffff,bg=#60656e] %A #[fg=#2196f3,bg=#60656e,nobold,nounderscore,noitalics]#[fg=#ffffff,bg=#2196f3] %B %d "
setw -g window-status-format "#[fg=#2e3440,bg=#2e3440,nobold,nounderscore,noitalics]#[default] #I #W #[fg=#2e3440,bg=#2e3440,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=#2e3440,bg=#60656e,nobold,nounderscore,noitalics]#[fg=#ffffff,bg=#60656e] #I #W #F #[fg=#60656e,bg=#2e3440,nobold,nounderscore,noitalics]"
