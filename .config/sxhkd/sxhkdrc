# Terminal
super + Return
	alacritty

# Terminal (floating)
super + shift + Return
	bspc rule -a urxvt -o state=floating follow=on center=true rectangle=490x310+0+0 && urxvt

# Music Player
super + shift + m
	bspc rule -a urxvt -o state=floating follow=on center=true rectangle=590x260+0+0 && urxvt -e tunes

# Rofi menu
super + d
    sh $HOME/.local/bin/rofi.sh

# Power menu
super + shift + Q
    sh $HOME/.local/bin/powermenu

# Network Manager
super + n
    sh $HOME/.local/bin/networkmanager

# Notification Center
super + o
    sh $HOME/.local/bin/notificationcenter

# File Manager
super + p
	thunar

# Browser
super + w
	brave

##---------- Applications ----------##

# Launch Apps
super + shift + {f,w,e}
	{thunar,firefox,code}

##---------- System Keys ----------##

# Screenshot
super + s
	sh $HOME/.local/bin/screenshot
	
# Brightness Control
XF86MonBrightness{Up,Down}
    sh $HOME/.local/bin/brightness {up,down}

# Volume Control
Manage volume
XF86Audio{Raise,Lower}Volume
    sh $HOME/.local/bin/volume {up,down}

XF86AudioMute
    sh $HOME/.local/bin/volume mute

# Music Control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

##---------- Bspwm ----------##

# Close App
#super + {_,shift + }c
#	bspc node -{c,k}

super + q
    bspc node -{c,k}

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Kill Window
ctrl + alt + Escape
    xkill

# Quit/Restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}
	
# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Fullscreen or Monocle
super + f
#	bspc desktop -l next
    bspc node -t "~"fullscreen

# Toggle floating/tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & Tiled Mode
super + shift + space
#super + {p,t}
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

# Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
# Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
	
# Move floating windows
alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}	
